<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    style="@style/matchWarp"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/five_dp"
    card_view:cardElevation="@dimen/four_dp"
    card_view:cardMaxElevation="@dimen/six_dp">

    <LinearLayout
        style="@style/matchWarp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:text="@string/type"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/type"
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:textSize="@dimen/text_size_fifteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:text="@string/satellite_no"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/satNo"
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:textSize="@dimen/text_size_fifteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:text="@string/elevation_new"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/elevation"
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:textSize="@dimen/text_size_fifteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:text="@string/azamuth"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/azamuth"
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:textSize="@dimen/text_size_fifteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/wrapContent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp"
                android:text="@string/color"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/color"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five_dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

