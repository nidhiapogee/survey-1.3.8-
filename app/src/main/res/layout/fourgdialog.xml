<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchParent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/dialog_positive_round"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        card_view:cardBackgroundColor="@color/color_bluedark"
        card_view:cardCornerRadius="@dimen/ten_dp"
        card_view:cardElevation="@dimen/one_dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/lay"
            style="@style/matchWarp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cmethodtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:gravity="center"
                android:text="@string/for_user_selection"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylcerview4g"
        style="@style/matchWarp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        style="@style/matchWarp"
        android:layout_marginTop="@dimen/fifty_dp"
        android:id="@+id/timebt"
        android:textColor="@color/white"
        android:text="@string/confirm"
        android:background="@drawable/rounbutton" />

</LinearLayout>