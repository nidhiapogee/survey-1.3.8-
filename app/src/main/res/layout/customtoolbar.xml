<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:layout_height="@dimen/fifty_six">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/satlay"
           style="@style/wrapContent"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:src="@drawable/satellite"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/sattxt"
               style="@style/wrapContent"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/n_a"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_twelve"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btrylay"
            style="@style/wrapContent"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btimg"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                app:tint="@color/white"
                android:src="@drawable/batterynostats" />
            <TextView
                android:id="@+id/bttxt"
                style="@style/wrapContent"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/n_a"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_twelve"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blelay"
           style="@style/wrapContent"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bleimg"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_bluetooth_disabled_24"
                />
            <TextView
                android:id="@+id/connection_state"
                style="@style/wrapContent"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/n_a"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_twelve"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/statuslay"
            style="@style/wrapMatch"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stssssimg"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                app:tint="@color/white"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/deviceg" />


            <ImageButton
                android:id="@+id/btn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:tint="@color/white"
                android:background="@color/transparent"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/_10sdp" />

            <TextView
                android:id="@+id/stsssstxt"
               style="@style/wrapContent"
                android:textStyle="bold"
                android:layout_gravity="bottom|center_horizontal"
                android:text="@string/n_a"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_twelve"
                android:layout_marginBottom="3dp"/>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>